# ===============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===============================================
# Copia este archivo como .env.prod y ajusta los valores

# ===============================================
# BASE DE DATOS
# ===============================================
DB_HOST=db
DB_PORT=1433
DB_USERNAME=sa
DB_PASSWORD=YourVeryStrongProductionPassword123!
DB_DATABASE=veterinaria_auth_prod

# ===============================================
# APLICACIÓN
# ===============================================
NODE_ENV=production
PORT=3001

# ===============================================
# SEGURIDAD - JWT
# ===============================================
# IMPORTANTE: Genera un secret muy fuerte para producción
# Puedes usar: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-for-production-use-openssl-rand-base64-64

# ===============================================
# OPCIONAL - CONFIGURACIONES ADICIONALES
# ===============================================
# Logging level (error, warn, info, debug)
LOG_LEVEL=warn

# Database connection pool
DB_CONNECTION_LIMIT=20
DB_CONNECTION_TIMEOUT=30000

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS origins (separar con comas si son múltiples)
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# SSL/TLS para base de datos (si es necesario)
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true